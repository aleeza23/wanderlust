<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h3 class="col-md-6 offset-md-3 my-3">Sign Up For Airbnb</h3>
    <div class="col-md-6 offset-md-3">
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="username">Username :</label><br>
                <input  required class="form-control" type="text" id="username" name="username" placeholder="Enter Your Name" >
                <div class="valid-feedback">Looks good! </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">E-mail :</label><br>
                <input required class="form-control" type="email" id="email" name="email" placeholder="Enter Your Name" >
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password :</label><br>
                <input required class="form-control" type="password" id="password" name="password" placeholder="Enter Your Name" >
            </div>
            <button class="btn btn-success">Sign Up</button>
        </form>
    </div>
</div>